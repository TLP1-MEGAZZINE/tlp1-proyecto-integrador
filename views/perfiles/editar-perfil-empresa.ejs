          <div class="container">
            <div class="row align-items-start">
              <div class="col"></div>
              <div class="col">
                <div class="container">
                  <h1>Editar perfil de la empresa</h1>
                  <form action="perfilusuario.html">
                    <div class="form-group">
                      <label for="nombre">Nombre de la empresa</label>
                      <input type="text" class="form-control" id="nombre" placeholder="Nombre de la empresa">
                    </div>
                    <div class="form-group">
                      <label for="apellido">Ubicacion</label>
                      <input type="text" class="form-control" id="apellido" placeholder="Ubicacion de la empresa">
                    </div>
                    <div class="form-group">
                      <label for="descripcion">Rubro</label>
                      <textarea class="form-control" id="descripcion" rows="3" placeholder="Escribir Rubro"></textarea>
                    </div>

                    <div class="form-group">
                      <label for="descripcion">Resumen de la empresa</label>
                      <textarea class="form-control" id="descripcion" rows="3"
                        placeholder="Resumen de la empresa?"></textarea>
                    </div>
                    <div class="form-group">
                      <label for="descripcion">¿Que busca la empresa?</label>
                      <textarea class="form-control" id="descripcion" rows="3"
                        placeholder="¿Que busca la empresa?"></textarea>
                    </div>
                    <div class="form-group">
                      <label for="educacion">Nombre y apellido del administardor</label>
                      <input type="text" class="form-control" id="educacion"
                        placeholder="Nombre y apellido del admnistrador de la empresa">
                    </div>
                    <div class="form-group">
                      <label for="experiencia">Contactos</label>
                      <textarea class="form-control" id="experiencia" rows="3"
                        placeholder="Numeros de contacto o correo electronico"></textarea>
                    </div>

                    <!-- AGREGAR FOTO DE PERFIL -->
                    <div class="spacer"></div>
                    <div class="form-group">
                      <label for="foto">Agregar foto de perfil</label>
                      <input type="file" class="form-control-file" id="foto" accept="image/*">
                    </div>
                    <div class="spacer"></div>
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                    <div class="spacer"></div>
                  </form>
                </div>
              </div>
              <div class="col">

              </div>
            </div>
          </div>
        </div>
      </div>
